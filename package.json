{
    "name": "ViperScript",
    "displayName": "ViperLang",
    "description": "Language support for .vi files (Viper)",
    "version": "0.1.2",
    "icon": "Images/viperscript.png", 
    "engines": {
        "vscode": "^1.83.0"
    },
    "publisher": "JustMeCoffee",
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/hadll/viper-VScode-language-support.git"
    },
    "contributes": {
        "languages": [{
            "id": "viper",
            "aliases": ["viper", "viper", "viper", "viper"],
            "extensions": [".vi"],
            "configuration": "./language-configuration.json",
            "icon": {
                "light": "Images/viperscript.png",
                "dark": "Images/viperscript.png"
            }
        }],
        "grammars": [{
            "language": "viper",
            "scopeName": "source.vi",
            "path": "./syntaxes/viper.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "viper",
                "path": "./snippets/viper-snippets.json"
            }
        ]
    }
}